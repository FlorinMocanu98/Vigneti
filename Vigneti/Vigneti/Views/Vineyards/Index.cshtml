                </th>
                <th>
                    Vigneto di
                </th>
                <th>
                    Dimensione
                </th>
                <th>
                    Umidità
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Vineyards3)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VineyardID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VineGrower.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dimension)
